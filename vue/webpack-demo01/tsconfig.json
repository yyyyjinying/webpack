{
    "compilerOptions": { // 编译器选项列表
        "target": "ES5", // 指定ECMAScript的目标版本：
                        // ► "ES3"（默认值）
                        // ► "ES5"
                        // ► "ES6"/ "ES2015"
                        // ► "ES2016"
                        // ► "ES2017"
                        // ► "ES2018"
                        // ► "ES2019"
                        // ► "ES2020"
                        // ► "ESNext"
        "module": "es2015",
        "allowJs": true,
         //用NPM模式加载
        "moduleResolution": "node",
        //对于没有Export的库进行兼容
        "allowSyntheticDefaultImports": true,
        //开启修饰器模式
        "experimentalDecorators": true,
        //识别基本的系统类库
        "lib": [
        "dom",
        "es5",
        "es2015"
        ],
        // "noImplicitAny": true, // 在隐any式类型的表达式和声明上引发错误。
        // "removeComments": true, // 删除所有以开头的版权右标题注释除外的注释 /*!
        "sourceMap": true // 生成相应的.map文件。
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}